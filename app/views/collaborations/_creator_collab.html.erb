<!-- Index for ALL COLLABS FOR SPECIFIC CREATOR -->
<div class="full-height-page">
  <div class="title text-center mb-3">
    <h1><%= current_user.first_name %>'s  Collaborations Gallery</h1>
  </div>
  <div class="row my-3 p-3">
    <% @collaborations.each do |collab| %>
      <% if current_user.id == collab.creator_id %>
        <% if collab.collab_upload.filename == nil %>
          <div class="col-4 mx-3">
            <div class="card-collab mx-3 my3">
              <%= cl_image_tag collab.drawing.image %>
              <div class="card-collab-infos">
                <div>
                  <p><%= collab.drawing.name %> by <%= collab.drawing.kid.first_name %></p>
                  <p>Created at: <%= collab.created_at.strftime("%d / %m / %Y") %></p>
                  <p>Date due: <%= (collab.created_at + 7.days).strftime("%d / %m / %Y") %></p>
                  <%= simple_form_for [current_user, collab], html: {novalidate: false} do |f| %>
                    <%= f.input :collab_upload, :required => true %>
                    <%= f.input :collab_upload_cache, as: :hidden %>
                    <%= f.submit "Complete Collab!", class:"btn btn-primary my-3" %>
                    <%= cl_image_tag collab.creator.avatar, class:"card-collab-user avatar-bordered" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% elsif collab.collab_upload.filename != nil %>
          <div class="col-4 mx-3">
            <div class="card-collab mx-3 my-3">
              <%= cl_image_tag collab.drawing.image %>
              <%= cl_image_tag collab.collab_upload %>
              <div class="card-collab-infos">
                <div>
                  <p><%= collab.drawing.name %> by <%= collab.drawing.kid.first_name %></p>
                  <p>Created at: <%= collab.created_at.strftime("%d / %m / %Y") %></p>
                  <p>COMPLETED</p>
                  <p><%= link_to 'View Collaboration', creator_collaboration_path(collab.creator, collab)  %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>