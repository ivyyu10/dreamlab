<div class='container-profile'>
  <div class="text-center col-md-6 col-sm-8 offset-sm-2">
    <%= cl_image_tag @creator.avatar, class:"avatar-bordered w-50 h-50 m-3" %>
    <h1><%= @creator.first_name %> <%= @creator.last_name %>, <%= @creator.age %></h2>
    <h2>Location: <%= @creator.city %></h2>
    <%= link_to "Edit Profile", edit_creator_path(@creator), class:"mb-3" %>
    <h4>Description: </h4>
    <p><%= @creator.description %></p>
    <h4>Portfolio URL </h4>
    <p><%= @creator.portfolio_url %></p>
  </div>
</div>
