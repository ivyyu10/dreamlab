<div class="card-trip">
  <% @drawings.each do |drawing| %>
    <h2><%= drawing.name %></h2>
    <%= cl_image_tag drawing.image %>
    <%= link_to 'View drawing', kid_drawing_path(drawing.kid, drawing)  %>
    <div class="card-trip-infos">
      <div>

        <p><%= drawing.upload_at %></p>
      </div>
      <h2 class="card-trip-pricing"><%= drawing.kid_id %></h2>
      <img src='https://kitt.lewagon.com/placeholder/users/krokro' class="card-trip-user avatar-bordered"/>
    </div>
  <% end %>
</div>
